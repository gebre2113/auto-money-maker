# Profit Master Environment Configuration
# System
SYSTEM_VERSION={{ system_version }}
ENVIRONMENT=production
DEBUG=false
SECRET_KEY={{ vault_secret_key }}
ALLOWED_HOSTS={{ ansible_default_ipv4.address }},localhost,127.0.0.1

# Database
DATABASE_URL=postgresql://profitmaster:{{ vault_db_password }}@localhost:5432/profitmaster_production
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# AI Services (At least one required)
GROQ_API_KEY={{ vault_groq_api_key }}
GEMINI_API_KEY={{ vault_gemini_api_key }}
OPENAI_API_KEY={{ vault_openai_api_key }}
HUGGINGFACE_TOKEN={{ vault_huggingface_token }}
COHERE_API_KEY={{ vault_cohere_api_key }}
ANTHROPIC_API_KEY={{ vault_anthropic_api_key }}

# Social Media
TWITTER_API_KEY={{ vault_twitter_api_key }}
TWITTER_API_SECRET={{ vault_twitter_api_secret }}
TWITTER_ACCESS_TOKEN={{ vault_twitter_access_token }}
TWITTER_ACCESS_SECRET={{ vault_twitter_access_secret }}

FACEBOOK_ACCESS_TOKEN={{ vault_facebook_access_token }}
FACEBOOK_PAGE_ID={{ vault_facebook_page_id }}

LINKEDIN_ACCESS_TOKEN={{ vault_linkedin_access_token }}

TELEGRAM_BOT_TOKEN={{ vault_telegram_bot_token }}
TELEGRAM_CHAT_ID={{ vault_telegram_chat_id }}

# YouTube
YOUTUBE_API_KEY={{ vault_youtube_api_key }}

# AWS (for S3 storage)
AWS_ACCESS_KEY_ID={{ vault_aws_access_key_id }}
AWS_SECRET_ACCESS_KEY={{ vault_aws_secret_access_key }}
AWS_S3_BUCKET=profitmaster-content
AWS_REGION=us-east-1

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER={{ vault_smtp_user }}
SMTP_PASSWORD={{ vault_smtp_password }}
EMAIL_FROM=noreply@profitmaster.ai

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Content Generation
CONTENT_QUALITY_THRESHOLD=85
MAX_CONTENT_LENGTH=5000
MIN_CONTENT_LENGTH=2000
READABILITY_TARGET=70

# Monetization
AFFILIATE_COMMISSION_RATE=0.7
MINIMUM_COMMISSION=10.0
GEO_TARGETING_ENABLED=true

# Security
ENCRYPTION_KEY={{ vault_encryption_key }}
JWT_SECRET_KEY={{ vault_jwt_secret_key }}
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Storage
MAX_UPLOAD_SIZE=104857600  # 100MB
ALLOWED_EXTENSIONS=mp3,mp4,wav,png,jpg,jpeg,gif,pdf,html,txt
CONTENT_STORAGE_PATH={{ app_dir }}/content
MULTIMEDIA_STORAGE_PATH={{ app_dir }}/multimedia

# Performance
WORKER_COUNT=4
THREAD_COUNT=8
CACHE_TTL=3600
RATE_LIMIT_PER_MINUTE=60
