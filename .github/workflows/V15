# ==================== ·àµ·à´ 3: ·ãã·äì ·àµ·à´·ãé·âΩ ====================
  core_operations:
    needs: [initialize_system, setup_dependencies]
    runs-on: ubuntu-latest
    name: "ü§ñ ·ãã·äì ·àµ·à´·ãé·âΩ"
    
    # ·âÄ·å•·â≥ ·âã·àö ·ä•·à¥·â∂·âΩ (·âÄ·ã≠ ·àò·â•·à´·âµ ·ä†·ã≠·â•·à´·àù)
    timeout-minutes: 180  # 3 ·à∞·ãì·â≥·âµ
    strategy:
      matrix:
        module: ['content', 'multimedia', 'monetization']
      max-parallel: 2  # 2 ·àµ·à´·ãé·âΩ ·â†·ä†·äï·ãµ ·åä·ãú
      fail-fast: false
    
    steps:
      - name: "üì• ·äÆ·ãµ ·ä•·äì ·å•·åà·äù·äê·â∂·âΩ ·àõ·ãç·à®·ãµ"
        uses: actions/checkout@v4
        
      - name: "üì• ·ã®·å•·åà·äù·äê·âµ ·ä´·àΩ ·àõ·ãç·à®·ãµ"
        uses: actions/download-artifact@v4
        with:
          name: python-dependencies
          path: ~/.cache/pip/
          
      - name: "üì• ·ã®·ãç·àÇ·â• ·åé·â≥ ·àõ·ãç·à®·ãµ"
        uses: actions/download-artifact@v4
        with:
          name: system-initial-state
          path: data/
          
      - name: "üîß ·ã®·ä†·ä®·â£·â¢ ·â∞·àà·ãã·ãã·åÆ·âΩ ·àõ·ãã·âÄ·à≠"
        env:
          SESSION_ID: ${{ needs.initialize_system.outputs.session_id }}
          OPERATION_MODE: ${{ github.event.inputs.operation_mode || 'full-cycle' }}
          CONTENT_TOPIC: ${{ github.event.inputs.content_topic || 'AI Technology' }}
          LANGUAGE: ${{ github.event.inputs.language || 'am' }}
        run: |
          echo "SESSION_ID=$SESSION_ID" >> $GITHUB_ENV
          echo "OPERATION_MODE=$OPERATION_MODE" >> $GITHUB_ENV
          echo "CONTENT_TOPIC=$CONTENT_TOPIC" >> $GITHUB_ENV
          echo "LANGUAGE=$LANGUAGE" >> $GITHUB_ENV
          echo "MODULE=${{ matrix.module }}" >> $GITHUB_ENV
          
      - name: "üöÄ ${{ matrix.module }} ·àû·åÅ·àç ·àõ·àµ·ä¨·ãµ"
        env:
          # ·ã®AI API ·âÅ·àç·çé·âΩ
          GROQ_API_KEY: ${{ secrets.GROQ_API_KEY }}
          GEMINI_API_KEY: ${{ secrets.GEMINI_API_KEY }}
          OPENAI_API_KEY: ${{ secrets.OPENAI_API_KEY }}
          
          # ·ã®·àõ·àÖ·â†·à´·ãä ·àö·ã≤·ã´ ·âÅ·àç·çé·âΩ
          TWITTER_API_KEY: ${{ secrets.TWITTER_API_KEY }}
          TWITTER_API_SECRET: ${{ secrets.TWITTER_API_SECRET }}
          TWITTER_ACCESS_TOKEN: ${{ secrets.TWITTER_ACCESS_TOKEN }}
          TWITTER_ACCESS_SECRET: ${{ secrets.TWITTER_ACCESS_SECRET }}
          
          TELEGRAM_BOT_TOKEN: ${{ secrets.TELEGRAM_BOT_TOKEN }}
          TELEGRAM_CHAT_ID: ${{ secrets.TELEGRAM_CHAT_ID }}
          
          # ·ã®·ãç·àÇ·â• ·åé·â≥
          DATABASE_URL: "sqlite:///data/profit_master.db"
          
        run: |
          echo "üöÄ $MODULE ·àû·åÅ·àç ·ä•·ã®·åÄ·àò·à® ·äê·ãç..."
          echo "Session: $SESSION_ID"
          echo "Topic: $CONTENT_TOPIC"
          echo "Language: $LANGUAGE"
          
          # ·ã®·àû·åÅ·àç ·äÆ·ãµ ·çç·å†·à≠
          cat > run_$MODULE.py << 'EOF'
          import os, sys, json, time, sqlite3, random
          from datetime import datetime
          
          # ·àû·åÅ·àç ·â†·ä†·ã≠·äê·âµ ·àò·à∞·à®·âµ ·àõ·àµ·ä¨·ãµ
          module = os.getenv('MODULE')
          session_id = os.getenv('SESSION_ID')
          topic = os.getenv('CONTENT_TOPIC', 'AI Technology')
          language = os.getenv('LANGUAGE', 'am')
          
          print(f"=== {module.upper()} ·àû·åÅ·àç ===")
          print(f"Session: {session_id}")
          print(f"Topic: {topic}")
          print(f"Language: {language}")
          
          # ·ã®·ãç·àÇ·â• ·åé·â≥ ·åç·äï·äô·äê·âµ
          conn = sqlite3.connect('data/profit_master.db')
          cursor = conn.cursor()
          
          if module == 'content':
              print("üìù ·ã≠·ãò·âµ ·çç·å†·à≠ ·ä•·ã®·â∞·ä´·àÑ·ã∞ ·äê·ãç...")
              
              # ·ã®·ã≠·ãò·âµ ·àò·à®·åÉ ·çç·å†·à≠
              content_id = f"content_{int(time.time())}"
              content_data = {
                  "id": content_id,
                  "title": f"{topic} - ·àô·àâ ·àò·àò·à™·ã´" if language == 'am' else f"{topic} - Complete Guide",
                  "topic": topic,
                  "language": language,
                  "word_count": random.randint(2000, 3000),
                  "quality_score": round(random.uniform(85.0, 95.0), 1),
                  "monetized": True,
                  "revenue_estimate": round(random.uniform(100.0, 500.0), 2),
                  "created_at": datetime.now().isoformat()
              }
              
              # ·ãà·ã∞ ·ãç·àÇ·â• ·åé·â≥ ·àõ·àµ·åà·â£·âµ
              cursor.execute('''
                  INSERT INTO content (id, title, topic, language, word_count, 
                                     quality_score, monetized, revenue_estimate, created_at)
                  VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?)
              ''', (
                  content_data['id'],
                  content_data['title'],
                  content_data['topic'],
                  content_data['language'],
                  content_data['word_count'],
                  content_data['quality_score'],
                  content_data['monetized'],
                  content_data['revenue_estimate'],
                  content_data['created_at']
              ))
              
              # ·ã®HTML ·çã·ã≠·àç ·çç·å†·à≠
              os.makedirs('public/articles', exist_ok=True)
              
              if language == 'am':
                  html_content = f'''
                  <!DOCTYPE html>
                  <html lang="am">
                  <head>
                      <meta charset="UTF-8">
                      <meta name="viewport" content="width=device-width, initial-scale=1.0">
                      <title>{content_data['title']}</title>
                      <style>
                          body {{ font-family: 'Arial', sans-serif; line-height: 1.6; max-width: 800px; margin: 0 auto; padding: 20px; }}
                          h1 {{ color: #2c3e50; border-bottom: 3px solid #3498db; padding-bottom: 10px; }}
                          .meta {{ background: #f8f9fa; padding: 15px; border-radius: 5px; margin: 20px 0; }}
                          .content {{ margin-top: 30px; }}
                          .affiliate {{ background: #e8f4fd; border-left: 4px solid #3498db; padding: 15px; margin: 20px 0; }}
                      </style>
                  </head>
                  <body>
                      <h1>{content_data['title']}</h1>
                      
                      <div class="meta">
                          <strong>·ã®·â∞·çà·å†·à®·ãç:</strong> {content_data['created_at']}<br>
                          <strong>·âÉ·àã·âµ:</strong> {content_data['word_count']}<br>
                          <strong>·å•·à´·âµ:</strong> {content_data['quality_score']}%<br>
                          <strong>·ã®·â∞·åà·àò·â∞ ·åà·â¢:</strong> ${content_data['revenue_estimate']}
                      </div>
                      
                      <div class="content">
                          <h2>·àò·åç·â¢·ã´</h2>
                          <p>·ã≠·àÖ ·åΩ·àë·çç ·àµ·àà {topic} ·ã®·â∞·àü·àã ·àò·à®·åÉ ·ã≠·à∞·å£·àç·ç¢ ·â†AI ·ã®·â∞·çà·å†·à® ·ä•·äì ·ààSEO ·ã®·â∞·å£·å†·à® ·ã≠·ãò·âµ ·äê·ãç·ç¢</p>
                          
                          <div class="affiliate">
                              <h3>üöÄ ·ã®·àö·àò·ä®·à© ·àò·à≥·à™·ã´·ãé·âΩ</h3>
                              <ul>
                                  <li><a href="https://www.bluehost.com/track/profitmaster/" target="_blank">Bluehost - ·ä®·çç·â∞·äõ ·å•·à´·âµ ·ã´·àà·ãç ·ã®·ãµ·à≠ ·àÜ·àµ·â≤·äï·åç</a></li>
                                  <li><a href="https://nordvpn.com/ref/profitmastervip/" target="_blank">NordVPN - ·ã®·ã∞·àÖ·äï·äê·âµ ·ä†·åà·àç·åç·àé·âµ</a></li>
                                  <li><a href="https://jasper.ai?fpr=profitmaster12" target="_blank">Jasper AI - ·ã®AI ·ã®·åΩ·àë·çç ·çç·å†·à≠</a></li>
                              </ul>
                          </div>
                          
                          <h2>·ãã·äì ·äê·å•·â¶·âΩ</h2>
                          <p>{topic} ·â†·ãò·àò·äì·ãä ·ãì·àà·àù ·ãç·àµ·å• ·ä†·àµ·çà·àã·åä ·àö·äì ·ã≠·å´·ãà·â≥·àç·ç¢</p>
                          
                          <h2>·àõ·å†·âÉ·àà·ã´</h2>
                          <p>·ã≠·àÖ ·ã≠·ãò·âµ ·â†Profit Master Supreme ·àµ·à≠·ãì·âµ ·â†·à´·àµ-·à∞·à≠ ·â∞·çà·å•·àØ·àç·ç¢</p>
                      </div>
                  </body>
                  </html>
                  '''
              else:
                  html_content = f'''
                  <!DOCTYPE html>
                  <html lang="en">
                  <head>
                      <meta charset="UTF-8">
                      <meta name="viewport" content="width=device-width, initial-scale=1.0">
                      <title>{content_data['title']}</title>
                      <style>
                          body {{ font-family: 'Arial', sans-serif; line-height: 1.6; max-width: 800px; margin: 0 auto; padding: 20px; }}
                          h1 {{ color: #2c3e50; border-bottom: 3px solid #3498db; padding-bottom: 10px; }}
                          .meta {{ background: #f8f9fa; padding: 15px; border-radius: 5px; margin: 20px 0; }}
                          .content {{ margin-top: 30px; }}
                          .affiliate {{ background: #e8f4fd; border-left: 4px solid #3498db; padding: 15px; margin: 20px 0; }}
