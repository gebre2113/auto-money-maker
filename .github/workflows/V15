# ==================== ·àµ·à´ 1: ·àµ·à≠·ãì·âµ ·àò·åÄ·àò·à≠ ====================
jobs:
  initialize_system:
    runs-on: ubuntu-latest
    name: "‚öôÔ∏è ·àµ·à≠·ãì·âµ ·àò·åÄ·àò·à≠"
    outputs:
      session_id: ${{ steps.generate_id.outputs.session_id }}
      run_timestamp: ${{ steps.generate_id.outputs.timestamp }}
    
    steps:
      - name: "üì• ·äÆ·ãµ ·àõ·ãç·à®·ãµ"
        uses: actions/checkout@v4
        with:
          fetch-depth: 0
          
      - name: "üÜî ·ã®·àµ·à´ ·àò·â≥·ãà·âÇ·ã´ ·çç·å†·à≠"
        id: generate_id
        run: |
          SESSION="PM_$(date +%Y%m%d_%H%M%S)_${{ github.run_number }}"
          TIMESTAMP=$(date -u +"%Y-%m-%dT%H:%M:%SZ")
          echo "session_id=${SESSION}" >> $GITHUB_OUTPUT
          echo "timestamp=${TIMESTAMP}" >> $GITHUB_OUTPUT
          echo "‚úÖ ·ã®·àµ·à´ ·àò·â≥·ãà·âÇ·ã´: ${SESSION}"
          
      - name: "üìÅ ·ã®·ãç·àÇ·â• ·àò·ãã·âÖ·à≠ ·çç·å†·à≠"
        run: |
          mkdir -p data logs reports public/{articles,videos,audio,images,tables}
          echo "üìÇ ·ã®·ãç·àÇ·â• ·àò·ãã·âÖ·à≠ ·â∞·çà·å•·àØ·àç"
          
      - name: "üóÑÔ∏è ·ã®·ãç·àÇ·â• ·åé·â≥ ·àò·åÄ·àò·à≠"
        run: |
          python3 -c "
          import sqlite3, os, json
          from datetime import datetime
          
          os.makedirs('data', exist_ok=True)
          conn = sqlite3.connect('data/profit_master.db')
          cursor = conn.cursor()
          
          # ·ã®·àµ·à≠·ãì·âµ ·àù·ãù·åç·â¶·âΩ ·à†·äï·å†·à®·ã•
          cursor.execute('''
          CREATE TABLE IF NOT EXISTS system_logs (
              id INTEGER PRIMARY KEY AUTOINCREMENT,
              session_id TEXT,
              operation TEXT,
              status TEXT,
              details TEXT,
              created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
          )
          ''')
          
          # ·ã®·ã≠·ãò·âµ ·à†·äï·å†·à®·ã•
          cursor.execute('''
          CREATE TABLE IF NOT EXISTS content (
              id TEXT PRIMARY KEY,
              title TEXT,
              topic TEXT,
              language TEXT,
              word_count INTEGER,
              quality_score REAL,
              monetized BOOLEAN,
              revenue_estimate REAL,
              created_at TIMESTAMP
          )
          ''')
          
          # ·ã®·ä†·çà·çÉ·çÄ·àù ·àò·àà·ä™·ã´·ãé·âΩ
          cursor.execute('''
          CREATE TABLE IF NOT EXISTS performance (
              id INTEGER PRIMARY KEY AUTOINCREMENT,
              session_id TEXT,
              metric_name TEXT,
              metric_value REAL,
              timestamp TIMESTAMP DEFAULT CURRENT_TIMESTAMP
          )
          ''')
          
          # ·ã®·ä†·çä·àä·ã¨·âµ ·àù·à≠·â∂·âΩ
          cursor.execute('''
          CREATE TABLE IF NOT EXISTS affiliate_products (
              id TEXT PRIMARY KEY,
              name TEXT,
              category TEXT,
              commission REAL,
              link TEXT,
              rating REAL,
              status TEXT DEFAULT 'active'
          )
          ''')
          
          # ·àò·åÄ·àò·à™·ã´ ·ãç·àÇ·â• ·àõ·àµ·åà·â£·âµ
          cursor.execute(\"\"\"
          INSERT INTO affiliate_products (id, name, category, commission, link, rating)
          VALUES 
              ('bh001', 'Bluehost Pro', 'hosting', 75.0, 'https://www.bluehost.com/track/profitmaster/', 4.8),
              ('nv001', 'NordVPN Ultimate', 'security', 45.0, 'https://nordvpn.com/ref/profitmastervip/', 4.7),
              ('ja001', 'Jasper AI Pro', 'ai_tools', 25.0, 'https://jasper.ai?fpr=profitmaster12', 4.8),
              ('bn001', 'Binance Pro', 'crypto', 40.0, 'https://binance.com/en/register?ref=PROFITMASTER888', 4.5),
              ('ck001', 'ConvertKit Pro', 'email_marketing', 30.0, 'https://convertkit.com?ref=profitmasterpro', 4.7)
          \"\"\")
          
          conn.commit()
          conn.close()
          print('‚úÖ ·ã®·ãç·àÇ·â• ·åé·â≥ 4 ·à†·äï·å†·à®·ã¶·âΩ ·â∞·çà·å•·àØ·àç')
          "
          
      - name: "üì§ ·ã®·àò·åÄ·àò·à™·ã´ ·àÅ·äî·â≥ ·àõ·àµ·åà·â£·âµ"
        uses: actions/upload-artifact@v4
        with:
          name: system-initial-state
          path: data/

