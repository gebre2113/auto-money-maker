name: Profit Master Supreme v11.0

on:
  schedule:
    - cron: '0 6 * * *'    # በቀን 4 ጊዜ
    - cron: '0 12 * * *'
    - cron: '0 18 * * *'
    - cron: '0 0 * * *'
    - cron: '0 0 * * 0'    # ሳምንታዊ
  workflow_dispatch:      # ይህ ነው "Run Workflow" የሚለውን ቁልፍ የሚያመጣው!
    inputs:
      topic:
        description: 'ርዕስ'
        default: ''
      category:
        description: 'ምድብ'
        default: 'technology'

permissions:
  contents: write
  pages: write

jobs:
  run-profit-master:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      
      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'
          
      - name: Install Dependencies
        run: |
          pip install groq openai pandas requests schedule streamlit
          
      - name: Run Bot
        env:
          GROQ_API_KEY: ${{ secrets.GROQ_API_KEY }}
          TELEGRAM_BOT_TOKEN: ${{ secrets.TELEGRAM_BOT_TOKEN }}
          TELEGRAM_CHAT_ID: ${{ secrets.TELEGRAM_CHAT_ID }}
        run: python profit_master_supreme.py
